doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    title CodeBattles
    meta(name='description', content='')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(href='/css/custom.css' rel='stylesheet')
    link(href='/css/bootstrap.min.css', rel='stylesheet')
    script(src='/js/GetProblemID.js').
  body
    div
    script(async='', defer='')
        
    mixin Congratulations(name)
     h1 Congratulations #{name}
     h2 You got the right answer!
     h2  
    +Congratulations(username)


    mixin displayTime(numMinutes)
     h3 Your Time:
     h4 #{time} minutes
    +displayTime(time)
    
    di(class="container")
        div(class="row-justify-content-md-center")
            div(class="col.col-6")
                table(class="table-striped" id="Leaderboard")
                    thead
                     th(class="col-1") Rank
                     th(class="col-3") Username
                     th(class="col-2") Time (Minutes)
                    tbody
                        each item in leaders
                            tr
                                td(class="col-1")=leaders.indexOf(item)+1
                                td(class="col-3")=item.username
                                td(class="col-2")=item.totaltime



    button#problem_list.btn.btn-primary(onclick="location.href='/problems'") Problem List
    

